# Database Configuration
# IMPORTANT: Change these values for your environment
DB_HOST=your_database_host_here
DB_USER=your_database_user_here
DB_PASSWORD=your_secure_database_password_here
DB_NAME=your_database_name_here

# API Configuration
PORT=8080
NODE_ENV=development

# Security - CRITICAL: Generate a new secret using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_long_random_secret_here_128_characters_minimum

# CORS Configuration (Frontend URL)
FRONTEND_URL=http://localhost:5173

# Email Configuration (for password reset)
# Configure these with your email provider's SMTP settings
# For info@elcolt.pl, contact your hosting provider for:
# - SMTP host (e.g., smtp.elcolt.pl or mail.elcolt.pl)
# - SMTP port (usually 587 for TLS or 465 for SSL)
# - Your email credentials
SMTP_HOST=smtp.elcolt.pl
SMTP_PORT=587
SMTP_USER=info@elcolt.pl
SMTP_PASS=your-email-password-here
SMTP_FROM=info@elcolt.pl

# Optional: Logging
LOG_LEVEL=info


