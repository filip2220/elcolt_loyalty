# =====================================================
# El Colt Loyalty App - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DB_HOST=your_database_host_here
DB_USER=your_database_user_here
DB_PASSWORD=your_secure_database_password_here
DB_NAME=your_database_name_here

# =====================================================
# API CONFIGURATION
# =====================================================
PORT=8080
NODE_ENV=development

# =====================================================
# SECURITY - JWT CONFIGURATION
# =====================================================
# CRITICAL: Generate a strong secret using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# Requirements:
# - Minimum 64 characters (128 recommended)
# - Use cryptographically random bytes
# - NEVER use easily guessable strings
# - NEVER share or commit this value
JWT_SECRET=generate_a_long_random_secret_here_128_characters_minimum

# Optional: JWT expiration time (default: 24h)
# JWT_EXPIRES_IN=24h

# =====================================================
# CORS CONFIGURATION
# =====================================================
# Allowed frontend origins (comma-separated for multiple)
# Development: http://localhost:5173
# Production: https://elcolt.pl,https://www.elcolt.pl
FRONTEND_URL=http://localhost:5173

# =====================================================
# EMAIL CONFIGURATION (Password Reset)
# =====================================================
# Configure with your email provider's SMTP settings
SMTP_HOST=smtp.elcolt.pl
SMTP_PORT=587
SMTP_USER=info@elcolt.pl
SMTP_PASS=your-email-password-here
SMTP_FROM=info@elcolt.pl
SMTP_SECURE=false

# =====================================================
# WOOCOMMERCE API (For checkout integration)
# =====================================================
# Get these from WooCommerce -> Settings -> Advanced -> REST API
WC_STORE_URL=https://elcolt.pl
WC_CONSUMER_KEY=ck_your_consumer_key_here
WC_CONSUMER_SECRET=cs_your_consumer_secret_here

# =====================================================
# OPTIONAL: FIREBASE (Push Notifications)
# =====================================================
# Path to Firebase service account JSON file
# FIREBASE_SERVICE_ACCOUNT=./firebase-service-account.json

# =====================================================
# OPTIONAL: LOGGING & MONITORING
# =====================================================
LOG_LEVEL=info

# =====================================================
# PRODUCTION-SPECIFIC SETTINGS
# =====================================================
# Uncomment these for production deployment

# NODE_ENV=production
# FRONTEND_URL=https://elcolt.pl,https://www.elcolt.pl

# Use legacy monolithic routes (not recommended)
# USE_LEGACY_ROUTES=false
